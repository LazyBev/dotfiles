// -----------------------
// INPUT
// -----------------------
input {
    keyboard {
        xkb {
            layout "gb"
            options "numpad:mac"
        }
    }

    touchpad {
        tap
        natural-scroll
    }

    mouse {
        // Empty but valid
    }

    trackpoint {
        // Empty but valid
    }
}

// -----------------------
// OUTPUT
// -----------------------
output "eDP-1" {
    mode "1920x1080@120.030"
    scale 2.0
    transform "normal"
}

// -----------------------
// LAYOUT
// -----------------------
layout {
    gaps 10
    center-focused-column "never"

    default-column-width { proportion 0.5; }

    focus-ring {
        width 2
        active-color "#fcd1d7"
        inactive-color "#505050"
    }

    border {
        off
    }

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }
}

animations {
    off
}

// -----------------------
// WORKSPACES
// -----------------------
workspace "main"
workspace "apps"
workspace "unused"

// -----------------------
// WINDOW RULES
// -----------------------
window-rule {
    geometry-corner-radius 1
    clip-to-geometry true
}

window-rule {
    match app-id="zen$" title="^Picture-in-Picture$"
    open-floating true
}

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// -----------------------
// STARTUP â€“ SAFE & DETERMINISTIC
// -----------------------
spawn-at-startup "bash" "-lc" "pkill -f 'emacs.*daemon' || true; doom run --daemon"
spawn-at-startup "bash" "-lc" "swaybg -i ~/Pictures/agnes_tach.png"
spawn-at-startup "bash" "-lc" "pkill waybar || true; waybar"
spawn-at-startup "bash" "-lc" "pkill dunst || true; dunst"
spawn-at-startup "bash" "-lc" "/usr/lib/polkit-kde-authentication-agent-1 || true"

// -----------------------
// KEYBINDS
// -----------------------
binds {
    Alt+Shift+Slash { show-hotkey-overlay; }

    // -------------------
    // APPS
    // -------------------

    Alt+Return { spawn "ghostty"; }
    Alt+B { spawn "qutebrowser"; }
    Alt+Shift+B { spawn "zen-browser"; }
    Alt+T { spawn "dolphin"; }
    Alt+S { spawn "steam"; }
    Alt+D { spawn "fuzzel"; }
    Alt+V { spawn "lutris"; }
    Alt+U { spawn "bash" "-c" "pkill waybar; waybar &"; }
    Alt+Y { spawn "waypaper"; }
    Alt+C { spawn "emacsclient" "-c" "~/.config/niri/config.kdl"; }

    // -------------------
    // WINDOW / WORKSPACE
    // -------------------
    Alt+Q { close-window; }

    Alt+J { focus-column-left; }
    Alt+L { focus-column-right; }
    Alt+I { focus-window-up; }
    Alt+K { focus-window-down; }

    Alt+Shift+J { move-column-left; }
    Alt+Shift+L { move-column-right; }
    Alt+Shift+I { move-window-up; }
    Alt+Shift+K { move-window-down; }

    Alt+1 { focus-workspace 1; }
    Alt+2 { focus-workspace 2; }
    Alt+3 { focus-workspace 3; }

    Alt+Shift+1 { move-column-to-workspace 1; }
    Alt+Shift+2 { move-column-to-workspace 2; }
    Alt+Shift+3 { move-column-to-workspace 3; }

    Alt+Tab { toggle-window-floating; }

    Alt+W { maximize-column; }
    Alt+F { fullscreen-window; }

    // -------------------
    // SYSTEM (SAFE)
    // -------------------
    Alt+Shift+Backspace { quit; }
    Mod+Shift+L { spawn "swaylock"; }

    Alt+Ctrl+P  { spawn "systemctl" "reboot"; }
    Alt+Shift+P { spawn "systemctl" "poweroff"; }

    XF86AudioRaiseVolume allow-when-locked=true {
        spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1+"
    }

    XF86AudioLowerVolume allow-when-locked=true {
        spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1-"
    }

    XF86AudioMute allow-when-locked=true {
        spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"
    }

    XF86AudioMicMute allow-when-locked=true {
        spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"
    }

    Alt+X { screenshot; }
    Alt+Shift+X { screenshot-screen; }
    Alt+Ctrl+X { screenshot-window; }
}

prefer-no-csd
